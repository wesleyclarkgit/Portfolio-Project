[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=djangodeploy
Group=www-data
WorkingDirectory=/home/djangodeploy/Portfolio-Project
ExecStart=/home/djangodeploy/portfolio_ve/bin/gunicorn --access-logfile - --workers 3 --bind unix:/home/djangodeploy/Portfolio-Project/wesley_portfolio.sock wesley_portfolio.wsgi:application

[Install]
WantedBy=multi-user.target
